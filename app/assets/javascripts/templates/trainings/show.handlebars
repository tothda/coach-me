<div class="button-bar clearfix">
  <div class="pull-left" style="margin-right: 10px">
    {{#linkTo trainings class="btn"}}
      <i class="icon-arrow-left"></i>
      Back to trainings
    {{/linkTo}}
  </div>
  {{#if editing}}
    <div class="btn-group pull-left">
      <button {{action save}} class="btn btn-success">
        <i class="icon-ok icon-white"></i>
        Save training
      </button>
      <button {{action cancel}} class="btn">
        Cancel
      </button>
      <button {{action delete}} class="btn">
        Delete
      </button>
    </div>    
  {{else}}
    <div class="btn-group pull-left">  
      <button {{action edit}} class="btn">
        <i class="icon-edit"></i>
        Edit
      </button>
      <button {{action delete}} class="btn">
        Delete
      </button>      
    </div>
  {{/if}}  
</div>  

<hr>

<div class="row">
  <div class="span8">
    <div class="training-title">
      {{#if editing}}
        {{view Em.TextField valueBinding="title" class="editable editable-full h2"}}
      {{else}}
        <h2>{{title}}</h2>
      {{/if}}
    </div>
  </div>
  
  <div class="span2">
    <div class="pull-right">
      <h4>
        <i class="icon-calendar"></i>
        {{#if editing}}
          {{view Em.TextField valueBinding="startedAtFmt" class="editable h4 datepicker input-medium" data-behaviour="datepicker"}}
        {{else}}
          {{startedAtFmt}}
        {{/if}}
      </h4>
    </div>
  </div>
</div>
            
<hr>

<div class="row">
  <div class="span8">
    <h4>Notes</h4>
    <br>
    <div class="training-notes">
      <div class="well">
        {{notes}}
      </div>
    </div>
  </div>
  
  <div class="span4">
    <br>
    <br>
    
    <table class="table table-bordered features-table">
      <tr>
        <th>Feeling</th>
        <td>
          {{#if editing}}
            {{view Em.Select contentBinding="feelingOptions" 
                             optionValuePath="content.value"
                             optionLabelPath="content.label"
                             valueBinding="feeling"}}
          {{else}}
            <span>{{feelingLabel}}</span>
          {{/if}}
        </td>
      </tr>
      <tr>
        <th>Temperature</th>
        <td>
          {{#if editing}}
            {{view Em.Select contentBinding="temperatureOptions" 
                             optionValuePath="content.value"
                             optionLabelPath="content.label"
                             valueBinding="temperature"}}
          {{else}}
            <span>{{temperatureLabel}}</span>
          {{/if}}
        </td>
      </tr>
      <tr>
        <th>Weather</th>
        <td>
          {{#if editing}}
            {{view Em.Select contentBinding="weatherOptions" 
                             optionValuePath="content.value"
                             optionLabelPath="content.label"
                             valueBinding="weather"}}
          {{else}}
            <span>{{weatherLabel}}</span>
          {{/if}}
        </td>
      </tr>
      <tr>
        <th>Surface</th>
        <td>
          {{#if editing}}
            {{view Em.Select contentBinding="surfaceOptions" 
                             optionValuePath="content.value"
                             optionLabelPath="content.label"
                             valueBinding="surface"}}
          {{else}}
            <span>{{surfaceLabel}}</span>
          {{/if}}
        </td>
      </tr>
    </table>
  </div>
</div>

<hr>
<h3>Exercises for this training:</h3>

<table class="table table-striped exercise-table">
  <thead>
    <th style="width:30%">Description</th>
    <th style="width:30%">Distance</th>
    <th style="width:30%">Time</th>
    <th style="width:3%"></th>
  </thead>
  <tbody>
    {{#each exercise in exercises}}
      <tr>
        <td>{{exercise.name}}</td>
        <td>{{exercise.distance}}</td>
        <td>{{exercise.formattedTime}}</td>
        <td></td>
      </tr>
    {{/each}}
  </tbody>
</table>
