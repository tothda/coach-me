<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,  class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  
  <fieldset>
    <div id="legend">
      <legend class="">Forgot your password?</legend>
    </div>
    
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, class: 'input-xlarge' %>
      </div>
    </div>
  
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
        <br/><br />
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </fieldset>
<% end %>
